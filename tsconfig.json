{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"]
    },
    "lib": [
      "ES2022"
    ]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./tests",
    "./tasks",
    "./deploy",
    "./mocha.context.d.ts",
    "./build/typechain",
    "./typechain",
    "./utils",
    "./libs",
    "./src"
  ],
  "files": ["./hardhat.config.ts"]
}
